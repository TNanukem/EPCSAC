        td #{parameters.cloudlets_exact}

    tr
      td Tasks PEs
      if(parameters.cloudlets_pes_flag)
        td #{parameters.cloudlets_pes_min} - #{parameters.cloudlets_pes_max}
      else
        td #{parameters.cloudlets_pes_exact}

    tr
      td Tasks Length
      if(parameters.cloudlets_length_flag)
        td #{parameters.cloudlets_length_min} - #{parameters.cloudlets_length_max}
      else
        td #{parameters.cloudlets_length_exact}
